      "description": "The email of the service account used to authenticate with Google APIs",
      "default": "your client email here",
      "type": "string"
    },
    "privateKey": {
      "description": "The private key linked with the service account used to authenticate with Google APIs",
      "default": "your private key here",
      "type": "string"
    },
    "languageMapping": {
      "default": {
        "ar": "ar-AE",
        "nl": "nl-NL",
        "en": "en-US",
        "fr": "fr-FR",
        "de": "de-DE",
        "he": "iw-IL",
        "it": "it-IT",
        "ja": "ja-JP",
        "pl": "pl-PL",
        "pt": "pt-PT",
        "ru": "ru-RU",
        "es": "es-ES"
      },
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "voiceSelection": {
      "default": "NEUTRAL",
      "enum": [0, 1, 2, 3, "FEMALE", "MALE", "NEUTRAL", "SSML_VOICE_GENDER_UNSPECIFIED"]
    },
    "$schema": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["clientEmail", "enabled", "languageMapping", "privateKey", "voiceSelection"],
